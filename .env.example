# CardSnipe Environment Variables
# Copy this to .env and fill in your values

# ==============================
# eBay API (Required)
# ==============================
# Get these from https://developer.ebay.com
EBAY_CLIENT_ID=your_client_id_here
EBAY_CLIENT_SECRET=your_client_secret_here
EBAY_ENVIRONMENT=PRODUCTION

# ==============================
# Database (Required)
# ==============================
# PostgreSQL connection string
# Local: postgresql://postgres:postgres@localhost:5432/cardsnipe_dev
# Supabase: postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres
# Railway: postgresql://...
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cardsnipe_dev

# ==============================
# Redis (Optional - for caching & job queue)
# ==============================
# Leave empty to skip Redis features
# Upstash: rediss://default:[password]@[host].upstash.io:6379
REDIS_URL=

# ==============================
# Server Config
# ==============================
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ==============================
# Optional: Price APIs
# ==============================
# PSA_API_KEY=
# CARDLADDER_API_KEY=
# PRICECHARTING_API_KEY=

# ==============================
# Optional: eBay Affiliate
# ==============================
# Sign up at https://partnernetwork.ebay.com
# EBAY_AFFILIATE_CAMPAIGN_ID=
